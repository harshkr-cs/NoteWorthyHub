<style>
  .gradient-custom {
    /* fallback for old browsers */
    background: #667eea;

    /* Chrome 10-25, Safari 5.1-6 */
    background: -webkit-linear-gradient(to left, rgba(102, 126, 234, 0.5), rgba(118, 75, 162, 0.5));

    /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    background: linear-gradient(to left, rgba(102, 126, 234, 0.5), rgba(118, 75, 162, 0.5))
  }

  .a1 {
    position: relative;
    animation: 1s linear 0s 1 normal forwards running circle1;
  }

  @keyframes circle1 {
    from {
      top: 0.1vh;
      left: 0%;
    }
    to {
      top: 0.1vh;
      left: 20%
    }
  }
  .a2 {
    position: relative;
    animation: 0.8s linear 0s 1 normal forwards running circle1;
  }

  @keyframes circle1 {
    from {
      top: 0.1vh;
      left: -3%;
    }

    to {
      top: 0.1vh;
      left: 1%
    }
  }
</style>


<nav class="navbar gradient-custom navbar-expand-lg navbar-dark p-2 bg-black">
  <div class="container">
    <a class="navbar-brand a2" href="/">NoteWorthyHub</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link a1" href="/about">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link a1" target="_blank" href="/snake">Play game</a>
        </li>
      </ul>
      <ul class="navbar-nav ms-auto">
        {{#if user}}
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
            data-bs-toggle="dropdown" aria-expanded="false">
            Notes
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" href="/notes">All Notes</a>
            <a class="dropdown-item" href="/notes/add">Add A Note</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/auth/logout">Logout</a>
          </ul>
        </li>
        {{else}}
        <li class="nav-item">
          <a class="nav-link" href="/auth/signin">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/signup">Register</a>
        </li>
        {{/if}}
      </ul>
    </div>
  </div>
</nav>